<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcube.myapplication.FacultyProfile">

    <RelativeLayout
        android:id="@+id/profileRelLayout"
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="4dp">

        <LinearLayout
            android:id="@+id/profileLinLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:layout_weight="40">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/facultyProfilePic"
                    android:layout_width="135dp"
                    android:layout_height="135dp" />

                <ImageView
                    android:layout_width="135dp"
                    android:layout_height="135dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75">

                <TextView
                    android:id="@+id/teacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="85dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Teacher Name"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/teacherDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="130dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Designation"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/teacherSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="175dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Subject"
                    android:textSize="20dp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileLinLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/profileLinLayout1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


        </LinearLayout>

        <TextView
            android:id="@+id/counsellorInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:text="You are the counsellor of C..."
            android:textSize="20dp"
            android:layout_below="@+id/profileLinLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:textAlignment="center"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
